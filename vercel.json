{
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "framework": "nextjs",
  "regions": ["iad1"],
  "build": {
    "env": {
      "LYNXA_API_KEY": "@lynxa_api_key",
      "POSTGRES_URL": "@postgres_url",
      "AUTH_SECRET": "@auth_secret",
      "BLOB_READ_WRITE_TOKEN": "@blob_read_write_token",
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "app/api/**": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/db/migrate",
      "schedule": "0 0 * * *"
    }
  ]
}
